package layout

import "github.com/condemo/raspi-home-service/api/public/views/components"

templ Base(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title } | Raspi</title>
			<link rel="stylesheet" type="text/css" href="/static/css/style.css"/>
		</head>
		<body>
			@components.NavBar()
			<div id="main-container" class="flex flex-col mx-auto text-center h-screen">
				{ children... }
			</div>
			@components.Footer()
		</body>
	</html>
}
